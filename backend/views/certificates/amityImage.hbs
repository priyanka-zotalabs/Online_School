<html lang="en">

<head>

  <style>
    .outer {
      position: inherit;
      width: auto;
      height: auto;
      text-align: center;
      padding: 10mm;
      font-family: DejaVu Serif;
      font-size: 55%;
      size: 210mm 297mm;
    }

    .yellow-box {
      border: 4px solid #f4cd40;
      height: auto;
    }

    .blue-box {
      border: 4px solid #0000cd;
      height: auto;
      margin: 10px -20 -20px 10px;
    }

    .logo {
      text-align: center;
    }

    img {
      height: 150px;
      width: 200px;
    }

    .credential {
      text-align: right;
      margin-top: 20px;
      margin-right: 20px;
      padding-right: 20px;
    }

    .name {
      padding-top: 50px;
    }

    .certification-name {
      padding-top: 20px;
      margin-top: 20px;
    }

    .border-bottom {
      width: 60%;
    }

    .h2-header {
      padding-top: 10px;
      color: #857E7B;
      margin-top: 10px;
    }

    .certificate-course {
      margin-top: 20px;
      padding-top: 20px;
    }

    .certification-date {
      padding-top: 10px;
      margin-top: 10px;
      font-size: large;
      padding-bottom: 20px;
    }
  </style>
</head>

<body>
  <div class="outer">
    <div class="yellow-box">
      <div class="blue-box">

        <p class="credential">Credential Id: {{credentials}}</p>
        <div class="logo">
          <img src="{{appUrl}}/images/amityLogo.png">
        </div>
        <h1 class="name">{{name}}</h1>
        <hr class="border-bottom" />
        <h2 class="h2-header">has completed</h2>
        <h1 class="certificate-course">Certificate Course</h1>
        <h2 class="h2-header">in</h2>
        <h1 class="certification-name">{{certificateName}}</h1>
        <hr class="border-bottom" />
        <h2 class="h2-header">Offered By Amity Future Academy</h2>
        <p class="certification-date">on {{date}}</p>
      </div>
    </div>
  </div>

</body>

</html>